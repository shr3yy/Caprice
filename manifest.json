{
  "name": "caprice",
  "description": "One spot to save your ideas",
  "version": "1.0",
  "manifest_version": 2,

  "background": {
      "scripts": ["background.js"]
    },

  "browser_action": {
      "default_title": "caprice",
      "default_popup": "popup.html"
  },

  "content_scripts": [
      {
        "matches": ["http://*/*","https://*/*" ],
        "js": ["contentScript.js"]
      }
    ]

}
